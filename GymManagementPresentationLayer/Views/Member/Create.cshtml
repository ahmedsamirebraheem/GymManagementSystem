@using GymManagementDataAccessLayer.Entities.Enums
@model GymManagementBusinessLayer.ViewModels.MemberVM.CreateVM

@{
    ViewData["Title"] = "Add Member";
}

<header class="mb-4">
    <h3 class="text-primary-color">Add New Member</h3>
    <p class="text-muted">Please fill in both personal and health information below.</p>
</header>

@if (!ViewData.ModelState.IsValid && ViewData.ModelState.ContainsKey("MissingData"))
{
    <div class="alert alert-danger">
        @Html.ValidationMessage("MissingData")
    </div>
}

<form method="post" asp-controller="Member" asp-action="CreateMember" enctype="multipart/form-data">

    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-primary text-white py-3">
            <h5 class="mb-0"><i class="bi bi-person-badge me-2"></i>Personal & Address Information</h5>
        </div>
        <div class="card-body p-4">
            <div class="row g-4">
                <div class="col-12 border-bottom pb-4 mb-2">
                    <label asp-for="@Model.Photo" class="form-label fw-bold">Profile Photo</label>
                    <div class="d-flex align-items-start gap-4">
                        <div class="flex-shrink-0">
                            <img id="photoPreview"
                                 src="@Url.Content("~/images/User.jpg")"
                                 alt="Preview"
                                 style="width: 120px; height: 120px; object-fit: cover;"
                                 class="rounded-circle img-thumbnail shadow-sm" />
                        </div>
                        <div class="flex-grow-1">
                            <input asp-for="@Model.Photo" type="file" class="form-control mb-2" accept="image/*" id="photoInput" />
                            <small class="form-text text-muted d-block">Max size: 5 MB. Allowed: JPG, PNG, GIF</small>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <label asp-for="@Model.Name" class="form-label fw-bold">Full Name</label>
                    <input asp-for="@Model.Name" class="form-control" placeholder="Enter full name" />
                    <span asp-validation-for="@Model.Name" class="text-danger small"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="@Model.Email" class="form-label fw-bold">Email Address</label>
                    <input asp-for="@Model.Email" class="form-control" placeholder="example@domain.com" />
                    <span asp-validation-for="@Model.Email" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="@Model.PhoneNumber" class="form-label fw-bold">Phone Number</label>
                    <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="01xxxxxxxxx" />
                    <span asp-validation-for="@Model.PhoneNumber" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="@Model.DateOfBirth" class="form-label fw-bold">Date of Birth</label>
                    <input asp-for="@Model.DateOfBirth" class="form-control" type="date" />
                    <span asp-validation-for="@Model.DateOfBirth" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="@Model.Gender" class="form-label fw-bold">Gender</label>
                    <select asp-for="@Model.Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-select">
                        <option value="">-- Select Gender --</option>
                    </select>
                    <span asp-validation-for="@Model.Gender" class="text-danger small"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="@Model.BuildingNumber" class="form-label fw-bold">Building No.</label>
                    <input asp-for="@Model.BuildingNumber" class="form-control" />
                    <span asp-validation-for="@Model.BuildingNumber" class="text-danger small"></span>
                </div>

                <div class="col-md-5">
                    <label asp-for="@Model.Street" class="form-label fw-bold">Street</label>
                    <input asp-for="@Model.Street" class="form-control" />
                    <span asp-validation-for="@Model.Street" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="@Model.City" class="form-label fw-bold">City</label>
                    <input asp-for="@Model.City" class="form-control" />
                    <span asp-validation-for="@Model.City" class="text-danger small"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-success text-white py-3">
            <h5 class="mb-0"><i class="bi bi-heart-pulse me-2"></i>Health Record</h5>
        </div>
        <div class="card-body p-4">
            <div class="row g-4">
                <div class="col-md-4">
                    <label asp-for="@Model.HealthRecord.Height" class="form-label fw-bold">Height (cm)</label>
                    <div class="input-group">
                        <input asp-for="@Model.HealthRecord.Height" class="form-control" />
                        <span class="input-group-text">cm</span>
                    </div>
                    <span asp-validation-for="@Model.HealthRecord.Height" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="@Model.HealthRecord.Weight" class="form-label fw-bold">Weight (kg)</label>
                    <div class="input-group">
                        <input asp-for="@Model.HealthRecord.Weight" class="form-control" />
                        <span class="input-group-text">kg</span>
                    </div>
                    <span asp-validation-for="@Model.HealthRecord.Weight" class="text-danger small"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="@Model.HealthRecord.BloodType" class="form-label fw-bold">Blood Type</label>
                    <select asp-for="@Model.HealthRecord.BloodType" class="form-select">
                        <option value="">Select Type</option>
                        <option>A+</option>
                        <option>A-</option>
                        <option>B+</option>
                        <option>B-</option>
                        <option>O+</option>
                        <option>O-</option>
                        <option>AB+</option>
                        <option>AB-</option>
                    </select>
                    <span asp-validation-for="@Model.HealthRecord.BloodType" class="text-danger small"></span>
                </div>

                <div class="col-12">
                    <label asp-for="@Model.HealthRecord.Note" class="form-label fw-bold">Medical Notes</label>
                    <textarea asp-for="@Model.HealthRecord.Note" class="form-control" rows="3" placeholder="Any allergies, injuries, or chronic conditions..."></textarea>
                    <span asp-validation-for="@Model.HealthRecord.Note" class="text-danger small"></span>
                </div>
            </div>
        </div>
    </div>

    <footer class="d-flex justify-content-end gap-3 mt-5 pb-5">
        <a asp-controller="Member" asp-action="Index" class="btn btn-outline-secondary px-5 py-2">
            Cancel
        </a>
        <button type="submit" class="btn btn-primary px-5 py-2">
            <i class="bi bi-plus-circle me-2"></i> Save Member
        </button>
    </footer>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const photoInput = document.getElementById('photoInput');
        const photoPreview = document.getElementById('photoPreview');

        // نستخدم المار المباشر من الجذور
        const defaultSrc = "/images/User.jpg";

        photoInput.onchange = function (evt) {
            const [file] = this.files;
            if (file) {
                // إنشاء رابط مؤقت للصورة المختارة وعرضه
                photoPreview.src = URL.createObjectURL(file);
            } else {
                // العودة للصورة الافتراضية
                photoPreview.src = defaultSrc;
            }
        };
    </script>
}