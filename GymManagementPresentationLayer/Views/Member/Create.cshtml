@using GymManagementDataAccessLayer.Entities.Enums
@model GymManagementBusinessLayer.ViewModels.MemberVM.CreateVM
<header class="mb-4">
    <h3 class="text-primary-color">Add Member</h3>
</header>

@if (!ViewData.ModelState.IsValid && ViewData.ModelState.ContainsKey("MissingData"))
{
    <div class="alert alert-danger">
        @Html.ValidationMessage("MissingData")
    </div>
}
<form method="post" asp-controller="Member" asp-action="CreateMember" enctype="multipart/form-data">
    <!-- Step navigation -->
    <ul class="nav nav-tabs mb-4" id="addMemberTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="member-tab" data-bs-toggle="tab"
                    data-bs-target="#member-info" type="button" role="tab">
                Member Info
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="health-tab" data-bs-toggle="tab" data-bs-target="#health-info"
                    type="button" role="tab">
                Health Data
            </button>
        </li>
    </ul>

    <!-- Tab content -->
    <div class="tab-content">
        <!-- Member Info -->
        <div class="tab-pane fade show active" id="member-info" role="tabpanel"
             aria-labelledby="member-tab">
            <div class="section-header mb-3">
                <h5 class="text-primary fw-bold">Personal Information</h5>
                <hr class="mt-2">
            </div>
            <div class="row g-3">
                <div class="form-group">
                    <!-- Photo Preview -->
                    <div class="mt-2">
                        <img id="photoPreview" src="#" alt="Photo Preview" style="max-width: 200px; display: none;"
                             class="img-thumbnail" />
                    </div>
                    <label asp-for="@Model.Photo" class="control-label">Profile Photo 
                        @* <span class="text-danger">*</span> *@
                        </label>
                    <input asp-for="@Model.Photo" type="file" class="form-control" accept="image/*" id="photoInput"  />
                    <small class="form-text text-muted">Max size: 5 MB. Allowed types: JPG, PNG, GIF </small>
                </div>

                <div class="col-12 col-md-6">
                    <label asp-for="@Model.Name" class="form-label">Name</label>
                    <input asp-for="@Model.Name" type="text" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>

                </div>

                <div class="col-12 col-md-6">
                    <label asp-for="@Model.Email" class="form-label">Email</label>
                    <input asp-for="@Model.Email" type="text" class="form-control" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>

                </div>

                <div class="col-12 col-md-6">
                    <label asp-for="@Model.PhoneNumber" class="form-label">Phone</label>
                    <input asp-for="@Model.PhoneNumber"  type="text" class="form-control" />
                    <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="col-12 col-md-6">
                    <label asp-for="@Model.DateOfBirth" class="form-label">DateOfBirth</label>
                    <input asp-for="@Model.DateOfBirth" class="form-control" type="date" />
                    <span asp-validation-for="@Model.DateOfBirth" class="text-danger"></span>

                </div>

                <div class="col-12 col-md-6">
                    <label asp-for="@Model.Gender" class="form-label">Gender</label>
                    <select asp-for="@Model.Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-select">
                        <option value="">-- Select Gender --</option>
                    </select>
                    <span asp-validation-for="@Model.Gender" class="text-danger"></span>

                </div>

            </div>
            <div class="section-header mb-3 mt-4">
                <h5 class="text-primary fw-bold">Address Information</h5>
                <hr class="mt-2">
            </div>
            <div class="row g-3">

                <div class="col-12 col-md-6">
                    <label asp-for="@Model.BuildingNumber" class="form-label">BuildingNumber</label>
                    <input asp-for="@Model.BuildingNumber"  class="form-control" />
                    <span asp-validation-for="@Model.BuildingNumber" class="text-danger"></span>
                    
                </div>

                <div class="col-12 col-md-6">
                    <label asp-for="@Model.Street" class="form-label">Street</label>
                    <input asp-for="@Model.Street"  class="form-control" />
                    <span asp-validation-for="@Model.Street" class="text-danger"></span>
                </div>
                <div class="col-12 col-md-6">
                    <label asp-for="@Model.City" class="form-label">City</label>
                    <input asp-for="@Model.City"  class="form-control" />               
                    <span asp-validation-for="@Model.City" class="text-danger"></span>

                </div>
            </div>
        </div>

        <!-- Health Data -->
        <div class="tab-pane fade" id="health-info" role="tabpanel" aria-labelledby="health-tab">
            <div class="row g-3">
                <div class="col-12 col-md-6">
                    <label asp-for="@Model.HealthRecord.Height" class="form-label">Height</label>
                    <input asp-for="@Model.HealthRecord.Height"  class="form-control" />
                    <span asp-validation-for="@Model.HealthRecord.Height" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-6">
                    <label asp-for="@Model.HealthRecord.Weight" class="form-label">Weight</label>
                    <input asp-for="@Model.HealthRecord.Weight"  class="form-control" />
                    <span asp-validation-for="@Model.HealthRecord.Weight" class="text-danger"></span>

                </div>

                <div class="col-12 col-md-6">
                    <label asp-for="@Model.HealthRecord.BloodType" class="form-label">Blood Type</label>
                    <select asp-for="@Model.HealthRecord.BloodType"  class="form-select">
                        <option value="">Select</option>
                        <option>A+</option>
                        <option>A-</option>
                        <option>B+</option>
                        <option>B-</option>
                        <option>O+</option>
                        <option>O-</option>
                        <option>AB+</option>
                        <option>AB-</option>
                    </select>
                    <span asp-validation-for="@Model.HealthRecord.BloodType" class="text-danger"></span>

                </div>
                <div class="col-12 col-md-6">
                    <label asp-for="@Model.HealthRecord.Note" class=" form-label">Note</label>
                    <input asp-for="@Model.HealthRecord.Note" class="form-control" />
                    <span asp-validation-for="@Model.HealthRecord.Note" class="text-danger"></span>

                </div>
            </div>
        </div>
    </div>

    <footer class="d-flex justify-content-end gap-3 mt-4">
        <a asp-controller="Member" asp-action="Index" class="btn btn-outline-secondary px-4">
            <i class="bi bi-arrow-left me-2"></i> Back to List
        </a>

        <button type="submit" class="btn btn-primary px-4">
            <i class="bi bi-plus-circle me-2"></i> Add
        </button>
    </footer>

</form>

                    @section Scripts{
                        <partial name="_ValidationScriptsPartial" />
                    }