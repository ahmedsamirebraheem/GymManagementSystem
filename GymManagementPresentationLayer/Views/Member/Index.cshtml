@model IEnumerable<GymManagementBusinessLayer.ViewModels.MemberVM.MemberVM>
@{
    ViewData["Title"] = "Members";
}

<div class="container">
    <header class="d-flex justify-content-end mt-5 mb-4 align-items-center">
        <a asp-action="Create" class="btn btn-fill fw-medium rounded-pill px-3 py-3">
            + Add Member
        </a>
    </header>

    @if (Model is not null && Model.Any())
    {
        <div class="table-responsive" style="overflow: visible;">
            <table class="table table-borderless">
                <thead>
                    <tr>
                        <th><span>Photo</span></th>
                        <th><span>Name</span></th>
                        <th><span>Email</span></th>
                        <th><span>Gender</span></th>
                        <th><span>Phone</span></th>
                        <th><span>Action</span></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var member in Model)
                    {
                        <tr>
                            <td>
                                <span class="avatar">
                                    @if (string.IsNullOrEmpty(member.Photo))
                                    {
                                        <img src="~/images/User.jpg" alt="Default Avatar" class="rounded-circle" style="width: 45px; height: 45px; object-fit: cover;" />
                                    }
                                    else
                                    {
                                        @* لاحظ هنا استدعينا المسار مباشرة لأنه متخزن بـ images/members/.. *@
                                        <img src="~/@member.Photo" alt="@member.Name" class="rounded-circle" style="width: 45px; height: 45px; object-fit: cover; border: 1px solid #ddd;" />
                                    }
                                </span>
                            </td>
                            <td class="align-middle"><span>@member.Name</span></td>
                            <td class="align-middle"><span>@member.Email</span></td>
                            <td class="align-middle"><span>@member.Gender</span></td>
                            <td class="align-middle"><span>@member.PhoneNumber</span></td>
                            <td class="align-middle action position-relative">
                                <div class="dropdown">
                                    <button class="btn btn-link p-0 border-0" type="button"
                                            id="dropdownMenuButton-@member.Id" data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                        <i class="bi bi-three-dots-vertical fs-5 text-muted"></i>
                                    </button>
                                    <ul class="dropdown-menu shadow border-0" aria-labelledby="dropdownMenuButton-@member.Id">
                                        <li>
                                            <a asp-action="Details" asp-route-id="@member.Id" class="dropdown-item d-flex align-items-center gap-2">
                                                <i class="bi bi-person-lines-fill text-primary"></i> View Member Data
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-action="HealthRecordDetails" asp-route-id="@member.Id" class="dropdown-item d-flex align-items-center gap-2">
                                                <i class="bi bi-heart-pulse text-success"></i> Health Record
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a asp-action="Update" asp-route-id="@member.Id" class="dropdown-item d-flex align-items-center gap-2">
                                                <i class="bi bi-pencil-square text-warning"></i> Edit
                                            </a>
                                        </li>
                                        <li>
                                            <a asp-action="Delete" asp-route-id="@member.Id" class="dropdown-item d-flex align-items-center gap-2 text-danger">
                                                <i class="bi bi-trash3"></i> Delete
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-person-workspace display-1 text-muted"></i>
            <h4 class="mt-3 text-muted">No Members Available</h4>
            <p class="text-muted">Add your first Member to get started</p>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_AlertPartial" />
}