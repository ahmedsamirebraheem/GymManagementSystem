@model IEnumerable<GymManagementBusinessLayer.ViewModels.MembershipVM.MembershipVM>

<div class="container-fluid">
    <header class="bg-primary text-white rounded-3 p-4 shadow-sm mt-5 mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-1 fw-semibold">Active Memberships</h2>
                <p class="mb-0 text-light opacity-75">Manage members and their current subscription plans</p>
            </div>
            <div class="text-end">
                <a asp-action="Create" class="btn btn-light shadow-sm">
                    <i class="fas fa-plus me-1"></i> New Membership
                </a>
            </div>
        </div>
    </header>

    @* --- Alerts Section --- *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div id="Alert" class="alert alert-success alert-dismissible fade show shadow-sm">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div id="Alert" class="alert alert-danger alert-dismissible fade show shadow-sm">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body p-0">
            @* p-0 ليكون الجدول على كامل مساحة الكارد *@
            @if (Model is not null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Member Name</th>
                                <th>Plan</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th class="text-center">Status</th>
                                <th class="text-center pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-medium">@item.MemberName</td>
                                    <td>
                                        <span class="badge bg-light text-dark border">@item.PlanName</span>
                                    </td>
                                    @* نفترض أن StartDate هو تاريخ الـ CreatedAt *@
                                    <td>@item.StartDate.ToString("dd MMM yyyy")</td>
                                    <td>@item.EndDate.ToString("dd MMM yyyy")</td>
                                    <td class="text-center">
                                        @if (item.EndDate > DateTime.Now)
                                        {
                                            <span class="badge rounded-pill bg-success">
                                                <i class="bi bi-check-circle me-1"></i> Active
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge rounded-pill bg-danger">
                                                <i class="bi bi-exclamation-circle me-1"></i> Expired
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center pe-4">
                                        @* تصحيح: الربط بـ item.Id الخاص بالاشتراك وليس العضو *@
                                        <form method="post" asp-action="Cancel" asp-route-id="@item.Id"
                                              onsubmit="return confirm('Are you sure you want to cancel this membership?')"
                                              class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger shadow-sm">
                                                <i class="fas fa-times-circle me-1"></i> Cancel
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-card-checklist display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">No Memberships Found</h4>
                    <p class="text-secondary">Start by adding a new membership to the system.</p>
                    <a asp-action="Create" class="btn btn-primary mt-2">Add First Membership</a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_AlertPartial" />
}