@using GymManagementBusinessLayer.ViewModels.MemberSessionVM
@model MemberSessionIndexVM

@{
    ViewData["Title"] = "Member Sessions";
}

<div class="container">
    @* --- قسم الحصص القادمة (Upcoming Sessions) --- *@
    <header class="d-flex justify-content-between mt-5 mb-4 align-items-center">
        <div>
            <h2 class="text-primary-color mb-0">Upcoming Sessions</h2>
            <p class="text-muted">Sessions available for booking</p>
        </div>
    </header>

    <div class="row g-4">
        @if (Model.UpcomingSessions != null && Model.UpcomingSessions.Any())
        {
            @foreach (var session in Model.UpcomingSessions)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0 session-card">
                        <div class="card-header text-white py-3 bg-primary">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    <i class="bi bi-calendar-event me-2"></i>@session.CategoryName
                                </h5>
                                <span class="badge bg-light text-dark">Upcoming</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-3">@session.Description</p>

                            <div class="session-info mb-3">
                                <div class="info-item mb-2">
                                    <i class="bi bi-person-circle text-primary-color me-2"></i>
                                    <strong>Trainer:</strong> @session.TrainerName
                                </div>
                                <div class="info-item mb-2">
                                    <i class="bi bi-calendar3 text-primary-color me-2"></i>
                                    <strong>Date:</strong> @session.StartDate.ToString("MMM dd, yyyy")
                                </div>
                                <div class="info-item mb-2">
                                    <i class="bi bi-clock text-primary-color me-2"></i>
                                    <strong>Time:</strong> @session.StartDate.ToString("hh:mm tt") - @session.EndDate.ToString("hh:mm tt")
                                </div>
                                <div class="info-item mb-2">
                                    <i class="bi bi-hourglass-split text-primary-color me-2"></i>
                                    <strong>Duration:</strong> @session.Duration.ToString(@"hh\:mm")
                                </div>
                                <div class="info-item">
                                    <i class="bi bi-people text-primary-color me-2"></i>
                                    <strong>Capacity:</strong> @session.EnrolledCount/@session.MaxCapacity slots
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0">
                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-sessionId="@session.SessionId" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye me-1"></i> View Members
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    @* --- قسم الحصص الجارية (Ongoing Sessions) --- *@
    <header class="d-flex justify-content-between mt-5 mb-4 align-items-center">
        <div>
            <h2 class="text-primary-color mb-0">Ongoing Sessions</h2>
            <p class="text-muted">Sessions currently in progress (Manage Attendance)</p>
        </div>
    </header>

    <div class="row g-4">
        @if (Model.OngoingSessions != null && Model.OngoingSessions.Any())
        {
            @foreach (var session in Model.OngoingSessions)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0 session-card">
                        <div class="card-header text-white py-3 bg-success">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">
                                    <i class="bi bi-play-circle me-2"></i>@session.CategoryName
                                </h5>
                                <span class="badge bg-light text-dark">Ongoing</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-3">@session.Description</p>

                            <div class="session-info mb-3">
                                <div class="info-item mb-2">
                                    <i class="bi bi-person-circle text-primary-color me-2"></i>
                                    <strong>Trainer:</strong> @session.TrainerName
                                </div>
                                <div class="info-item mb-2">
                                    <i class="bi bi-clock-history text-primary-color me-2"></i>
                                    <strong>Ends At:</strong> @session.EndDate.ToString("hh:mm tt")
                                </div>
                                <div class="info-item">
                                    <i class="bi bi-people text-primary-color me-2"></i>
                                    <strong>Attendees:</strong> @session.EnrolledCount/@session.MaxCapacity
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-0">
                            <div class="d-grid gap-2">
                                <a asp-action="Details" asp-route-sessionId="@session.SessionId" class="btn btn-success btn-sm text-white">
                                    <i class="bi bi-person-check me-1"></i> Manage Attendance
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    @* --- رسالة في حالة عدم وجود أي حصص --- *@
    @if (!Model.UpcomingSessions.Any() && !Model.OngoingSessions.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-calendar-x display-1 text-muted"></i>
            <h4 class="mt-3 text-muted">No Sessions Available</h4>
            <p class="text-muted">There are no upcoming or ongoing sessions at the moment.</p>
        </div>
    }
</div>